@model Employee_CRUD.Models.LoginViewModel
@{
    Layout = "_CommonLandingPageLayout";
}



<div class="login-box">
    <div class="login-logo"><a href="#"><b>Quotes</b>Application</a></div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>
            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your User Name", @required = "Required" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="input-group mb-3">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Your Password", @required = "Required" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            <label for="RememberMe">Remember Me</label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
                <div class="row">
                    <div class="col-6">
                        <p class="mb-1">
                            <a href=@Url.Action("ResetPassword","Account")>I forgot my password</a>
                        </p>
                    </div>
                    <!-- /.col -->
                    <div class="col-6">
                        <p class="mb-1 float-right">
                            <a href=@Url.Action("Signup","Account")>Register</a>
                        </p>
                    </div>
                    <!-- /.col -->
                </div>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>
 

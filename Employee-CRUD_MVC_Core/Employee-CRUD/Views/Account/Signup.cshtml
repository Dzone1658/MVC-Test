@model BoilerPlate.Model.ViewModel.RegisterUserModel
@{ 
    Layout = "_CommonLandingPageLayout";
}


<div class="login-box">
    <div class="login-logo"><a href="#"><b>Quotes</b>Application</a></div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">New user signup</p>
            @using (Html.BeginForm("Signup", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email", @required = "Required" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Your Username", @required = "Required" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-user"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>
                <div class="input-group mb-3">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Your Password", @required = "Required" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>
                    
                    <div class="row">
                    <div class="col-6">
                        <p class="mb-1">
                            <a href=@Url.Action("Login","Account")>Login to your account</a>
                        </p>
                    </div>
                    <!-- /.col -->
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary btn-block">Signup</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
            </div>
    </div>
</div>

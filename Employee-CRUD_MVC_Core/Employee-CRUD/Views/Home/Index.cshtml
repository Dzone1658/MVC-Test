@model IEnumerable<PostViewModel>
@{
    ViewBag.Title = "Index";
}

<div class="card">
    <div class="card-header">
        <h2 class="card-title">All Post</h2>
        <div class="card-tools">
            <a href="@Url.Action("Index","Quotes")" class="btn btn-sm btn-primary"> Add New</a>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="tblCategory" class="table table-striped table-bordered table-hover table-sm">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Text</th>
                        <th>Tags</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center"><img style="height:100px;width:100px" src="~/Assets/Image/QuotesData/@item.ImageName"></td>
                            <td class="text-center">@item.QuoteText</td>
                            <td class="text-center">@item.Tags</td>
                            <td class="text-center">@item.PostCategory</td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}